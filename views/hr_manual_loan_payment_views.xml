<odoo>
    <!-- Form View untuk HrManualLoanPayment -->
    <record id="view_hr_manual_loan_payment_form" model="ir.ui.view">
        <field name="name">hr.manual.loan.payment.form</field>
        <field name="model">hr.manual.loan.payment</field>
        <field name="arch" type="xml">
            <form string="Manual Loan Payment">
                <sheet>
                    <group>
                        <!-- Pilihan Karyawan -->
                        <field name="employee_id" required="1"/>
                        <!-- Pilihan Pinjaman (Loan) -->
                        <field name="loan_id" required="1" domain="[('employee_id', '=', employee_id)]"/>
                        <!-- Detail Pembayaran -->
                        <field name="payment_date" required="1"/>
                        <field name="amount" required="1"/>
                        <field name="notes"/>
                    </group>
                    <!-- Tree View untuk Loan Lines -->
                    <field name="loan_line_ids">
                        <tree string="Loan Installments" editable="bottom">
                            <field name="date" readonly="1"/>
                            <field name="amount" readonly="1"/>
                            <field name="paid" readonly="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button string="Confirm Payment" type="object" name="action_confirm_payment" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="hr_loan_menu_root" 
        name="Loan Management" 
        sequence="10"/>
    <menuitem id="hr_loan_menu" 
        name="Loans" parent="hr_loan_menu_root" 
        action="action_hr_loan" sequence="10"/>
    <menuitem id="hr_manual_loan_payment" 
        name="Manual Loan Payment" 
        action="action_hr_manual_loan_payment"
        parent="hr_loan_menu_root" sequence="20"/>
</odoo>
